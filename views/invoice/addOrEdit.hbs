<script src="https://unpkg.com/gijgo@1.9.11/js/gijgo.min.js" type="text/javascript"></script>
<link href="https://unpkg.com/gijgo@1.9.11/css/gijgo.min.css" rel="stylesheet" type="text/css" />
<title>Add/Edit Invoice</title>
<h3>{{viewTitle}}</h3>

<form id ='addOrEdit' action = '/invoice' method="POST" autocomplete="off">
    <input type="hidden" id = 'invoiceid' name="_id" value="{{invoice._id}}">
    <div class="form-group">
        <label>Item(s) Purchased</label>
        <input type="text" class="form-control" name="item" placeholder="Enter items purchased, separated by commas"
            value="{{invoice.item}}">
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Notes</label>
            <input type="text" class="form-control" name="notes" placeholder="Extra Notes" value="{{invoice.notes}}">
        </div>
        <div class="form-group col-md-6">
            <label>Date</label>
            <input id="datepicker" name="date" width="100%" value="{{invoice.date}}" required>
            <script>
                $('#datepicker').datepicker({
                    uiLibrary: 'bootstrap4'
                });
            </script>
        </div>
    </div>
    <div class="money">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Amount</label>
                <input type="text" class="form-control" name="amount" placeholder="₹0" value="{{invoice.amount}}">
            </div>
            <div class="form-group col-md-6">
                <label>Amount Owed</label>
                <input type="text" class="form-control" name="owed" placeholder="₹0" value="{{invoice.owed}}">
            </div>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-12">
            <label for="invoice_customer">Select Client</label>
            <select class="selectpicker" data-live-search="true" name="invoice_customer" id="invoice_customer">
                {{#each customers}}
                    <option selected value={{email}}>{{fullName}}({{email}})</option>
                {{/each}}
            </select>


        </div>
    </div>
    <div class="form-group">
        <button id = 'submit' type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/invoice/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>

