<title>Customer List</title>
<h3>Customers</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>Address</th>
            <th>Invoices</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.fullName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.mobile}}</td>
            <td>{{this.address}}</td>
            <td><form method="POST" action="/invoice/search/{{this.email}}"><button class="btn btn-search" type="submit"><i class="fa fa-search fa-fw"></i></button></a></form></td>
            <td>
                <a href="/customer/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/customer/delete/{{this._id}}"
                    onclick="return confirm('Are you sure you would like to to delete this customer?');"><i
                        class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>